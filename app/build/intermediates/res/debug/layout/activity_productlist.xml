<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/salesBtn"
            style="@style/product_list"
            android:background="@drawable/productlist_btn_select"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/homepage_list_pull_down"
            android:text="@string/sales_volume" />

        <RadioButton
            android:id="@+id/priceBtn"
            style="@style/product_list"
            android:background="@drawable/productlist_btn_select"
            android:drawableRight="@drawable/homepage_list_price_down"
            android:text="@string/price" />

        <RadioButton
            android:id="@+id/newsProductBtn"
            style="@style/product_list"
            android:background="@drawable/productlist_btn_select"
            android:text="@string/news_product" />

        <RadioButton
            android:id="@+id/id_rb_filter"
            style="@style/product_list"
            android:background="@drawable/productlist_btn_select"
            android:text="筛选" />
    </RadioGroup>

    <!--<include-->
        <!---->
        <!--layout="@layout/inc_price_select">-->

    <!--</include>-->

    <cn.mstar.store.customviews.PullToRefreshView
        android:background="@color/white"
        android:id="@+id/pull_refresh_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <cn.mstar.store.customviews.GridViewWithHeaderAndFooter
            android:id="@+id/product_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:horizontalSpacing="3dp"
            android:listSelector="@null"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="3dp"
            android:visibility="visible" />
    </cn.mstar.store.customviews.PullToRefreshView>

</LinearLayout><!-- From: file:/D:/A_Star_Project/MstarStoreAppStudio2/app/src/main/res/layout/activity_productlist.xml -->