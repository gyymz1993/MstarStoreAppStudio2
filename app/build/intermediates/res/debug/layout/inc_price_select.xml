<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    >
    <TextView
        android:id="@+id/goods_norms_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="  分数"
        android:gravity="center"
        android:textColor="@color/black"
         />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        >

    <LinearLayout
        android:id="@+id/id_layou_1"
        android:orientation="horizontal"
        style="@style/layout_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="5dip"
        >

    <TextView
        android:id="@+id/id_tv_price_30"
        android:gravity="center"
        android:layout_marginLeft="5dip"
        android:background="@drawable/ed_shape_aw"
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:text="30以下"
        android:textColor="@color/result_view"
        />

    <TextView
        android:id="@+id/id_tv_price_50"
        android:gravity="center"
        android:layout_marginLeft="5dip"
        android:background="@drawable/ed_shape_aw"
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:text="30-50"
        android:textColor="@color/result_view"
        />

    <TextView
        android:id="@+id/id_tv_price_100"
        android:gravity="center"
        android:layout_marginLeft="5dip"
        android:background="@drawable/ed_shape_aw"
        style="@style/layout_horizontal"
        android:layout_weight="1"
        android:text="50-100"
        android:textColor="@color/result_view"
        />

        <TextView
            android:id="@+id/id_tv_price_seach"
            android:gravity="center"
            android:layout_marginLeft="5dip"
            android:background="@drawable/ed_shape_aw"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:text="群镶"
            android:textColor="@color/result_view"
            android:layout_marginRight="10dip"
            />

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dip"
        style="@style/layout_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="10dip"
        >

        <EditText
            android:id="@+id/id_pirce_min"
            android:gravity="center"
            android:layout_marginLeft="10dip"
            android:background="@drawable/ed_shape_aw"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/result_view"
            />

        <TextView
            android:gravity="center"
            android:layout_width="10dip"
            android:layout_height="match_parent"
            android:text="-"
            android:textColor="@color/result_view"
            />

        <EditText
            android:id="@+id/id_pirce_max"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/ed_shape_aw"
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:textColor="@color/result_view"
            />


        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:text="分"
            android:textColor="@color/result_view"
            />

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="0.8"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            >

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/D:/A_Star_Project/MstarStoreAppStudio2/app/src/main/res/layout/inc_price_select.xml -->