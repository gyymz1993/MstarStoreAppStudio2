<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="30dip"
    android:layout_gravity="center"
    >

    <TextView
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="质   量"
        android:id="@+id/id_tv_lable"
        android:gravity="center_vertical"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/id_tv_lable"
        android:gravity="center_vertical"
        >
        <EditText
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_txt_border"
            android:id="@+id/id_id_tv1"
            android:gravity="center"
            android:inputType="number"
            />
        <View
            android:layout_width="20dip"
            android:layout_height="1px"
            android:layout_margin="5dip"
            android:layout_centerVertical="true"
            android:id="@+id/id_view_line"
            android:layout_toRightOf="@+id/id_id_tv1"
            android:background="@color/color_grey_st" />

        <EditText
            android:id="@+id/id_id_tv2"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_view_line"
            android:background="@drawable/edit_txt_border"
            android:gravity="center"
            android:inputType="number"
            />
    </RelativeLayout>



