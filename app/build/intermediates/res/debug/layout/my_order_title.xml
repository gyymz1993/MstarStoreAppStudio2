<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/main_tab_group"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            tools:ignore="UselessParent">

            <FrameLayout
                android:id="@+id/id_fl_tab1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <cn.mstar.store.view.CheckedLinearlayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/tab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-10dp"
                        android:layout_marginTop="-8dp"
                        style="@style/handle_bar_style"
                        android:text="未付款"
                        />
                </cn.mstar.store.view.CheckedLinearlayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right"
                    android:paddingRight="10.0dip">

                    <TextView
                        android:id="@+id/tab1_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/shape_badge"
                        android:textSize="10.0dip"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        />

                </LinearLayout>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/id_fl_tab2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <cn.mstar.store.view.CheckedLinearlayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/tab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-10dp"
                        android:layout_marginTop="-8dp"
                        style="@style/handle_bar_style"
                        android:text="未发货"
                        />
                </cn.mstar.store.view.CheckedLinearlayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|right|center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10.0dip">

                    <TextView
                        android:id="@+id/tab2_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/shape_badge"
                        android:textSize="10.0dip"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </FrameLayout>



            <FrameLayout
                android:id="@+id/id_fl_tab3"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <cn.mstar.store.view.CheckedLinearlayout
                    android:id="@+id/shoppingcart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/tab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-10dp"
                        android:layout_marginTop="-8dp"
                        style="@style/handle_bar_style"
                        android:text="待收货"
                        />
                </cn.mstar.store.view.CheckedLinearlayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|right|center"
                    android:paddingRight="10.0dip">

                    <TextView
                        android:id="@+id/tab3_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/shape_badge"
                        android:textSize="10.0dip"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/id_fl_tab4"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <cn.mstar.store.view.CheckedLinearlayout
                    android:id="@+id/mycenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/tab4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-10dp"
                        android:layout_marginTop="-8dp"
                        style="@style/handle_bar_style"
                        android:text="退换货"
                        />
                </cn.mstar.store.view.CheckedLinearlayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|right|center"
                    android:paddingRight="10.0dip">

                    <TextView
                        android:id="@+id/tab4_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/shape_badge"
                        android:textSize="10.0dip"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/id_fl_tab5"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@null">

                <cn.mstar.store.view.CheckedLinearlayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/tab5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-10dp"
                        android:layout_marginTop="-8dp"
                        style="@style/handle_bar_style"
                        android:text="已完成"
                        />
                </cn.mstar.store.view.CheckedLinearlayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="top|right|center"
                    android:paddingRight="10.0dip">

                    <TextView
                        android:id="@+id/tab5_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/shape_badge"
                        android:textSize="10.0dip"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

