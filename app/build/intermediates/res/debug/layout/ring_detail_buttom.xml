<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:layout_marginTop="5dip"
        android:id="@+id/id_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="10dip"
        android:text="定制钻石戒指"
        android:textSize="17sp"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:layout_below="@+id/id_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_rl_detatil"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:id="@+id/id_ly_ring_content1"
            >

            <TextView
                android:layout_marginLeft="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成色"
                android:textSize="12sp"
                android:textColor="@color/black"
                />

            <RadioButton
                android:id="@+id/rb_select_1"
                android:layout_marginTop="5dip"
                android:paddingRight="17dip"
                android:paddingTop="1dip"
                android:paddingBottom="1dip"
                android:layout_width="125dip"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableRight="@drawable/homepage_list_price_down"
                android:layout_marginLeft="20dip"
                android:text="选择成色"
                android:background="@color/defaultTextColor"
                android:gravity="center"
                android:textColor="@color/white"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_marginRight="10dip"
            android:layout_marginTop="1dip"
            android:id="@+id/id_ly_ring_content2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手寸"
                android:paddingRight="20dip"
                android:textSize="12sp"
                android:textColor="@color/black"
                />

            <RadioButton
                android:id="@+id/rb_select_2"
                android:layout_marginTop="5dip"
                android:paddingRight="17dip"
                android:paddingTop="1dip"
                android:paddingBottom="1dip"
                android:layout_width="125dip"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawableRight="@drawable/homepage_list_price_down"
                android:layout_marginRight="20dip"
                android:text="选择尺寸"
                android:background="@color/defaultTextColor"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dip"
        android:layout_marginRight="25dip"
        android:layout_below="@+id/id_rl_detatil"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/id_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="@color/red"
            android:layout_marginBottom="10dip"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_show_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_margin="7dip"
            android:text="定制预览  ▶"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_buttnon"
            />

    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/A_Star_Project/MstarStoreAppStudio2/app/src/main/res/layout/ring_detail_buttom.xml -->