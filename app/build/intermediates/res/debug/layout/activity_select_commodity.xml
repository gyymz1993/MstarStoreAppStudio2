<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">



    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />




    <LinearLayout
        android:id="@+id/commodity_details_layout"
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:layout_below="@id/title_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/commodity_icon"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="10dip"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:lines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/commodity_price"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:id="@+id/commodity_is_carriage_free"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small_medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_between"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/commodity_details_layout"
        android:background="@color/gray" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@id/line_between">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/goods_norms_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_between"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dip"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scrollview"
                android:layout_marginTop="20dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_medium" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_commodity_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_product_made_minus_sign_select" />

                    <TextView
                        android:id="@+id/btn_commodity_number_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/display_productmade_box"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/btn_commodity_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_product_made_plus_sign_select" />
                </LinearLayout>

                <TextView
                    android:id="@+id/commodity_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <Button
                android:id="@+id/id_btn_slectring"
                android:textColor="@color/white"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="20dip"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="裸戒定制" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/commodity_details_layout"
                android:background="@color/gray" />

            <TextView
                android:layout_marginTop="5dip"
                android:id="@+id/agument_radiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_marginLeft="15dip"
                android:text="参数规格" />


                <cn.mstar.store.customviews.CompatibilityScrollListView
                    android:layout_marginTop="2dp"
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/commodity_details_layout"
                android:background="@color/gray" />


            <TextView
                android:id="@+id/detail_radiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:layout_marginLeft="15dp"
                android:text="商品详情" />

            <cn.mstar.store.customviews.CustomWebview
                android:layout_marginTop="2dp"
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_shopping_cart"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_black_st"
            android:gravity="center"
            android:text="@string/add_shopping_cart"
            android:textColor="@color/color_gold_nor"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/btn_buy_now_cart"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_black_st"
            android:gravity="center"
            android:text="@string/buy_now"
            android:textColor="@color/color_gold_nor"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>


    <cn.mstar.store.customviews.ErrorHintView
        android:id="@+id/hintview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        android:visibility="gone"/>




</RelativeLayout>
