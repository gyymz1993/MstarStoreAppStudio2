<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/preference_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:text="21分钟前"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/preference_content_border"
        android:orientation="vertical">

        <ImageView android:id="@+id/preference_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@null"/>
        <TextView android:id="@+id/preference_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/color_black_st"
            android:text="新品上市！夏日新宠 18k白金戒指"/>
        <TextView android:id="@+id/preference_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="@color/color_light_grey"
            android:text="7月底优惠活动大波来袭，你还顶得住吗"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_detach_line"/>
        <TextView android:id="@+id/preference_item_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="阅读全文"/>
    </LinearLayout>
</LinearLayout>