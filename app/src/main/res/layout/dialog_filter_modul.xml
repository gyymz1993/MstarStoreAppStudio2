<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/reset_tv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/filter_tv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/filtrate"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

    <include
        layout="@layout/inc_price_select">

    </include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/norms_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_between"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dip"
            android:orientation="vertical"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/goods_norms_tv"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small_medium" />

            <EditText
                android:id="@+id/goods_norms_group"
                android:background="@drawable/ed_shape_aw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/norms_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_between"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dip"
            android:orientation="vertical"/>
        </LinearLayout>


    <Button
        android:id="@+id/id_btn_seach"
        android:background="@drawable/button_shape_seach"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:textColor="@color/white"
        android:layout_marginLeft="70dip"
        />

</LinearLayout>