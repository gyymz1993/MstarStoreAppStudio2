<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical|right" >

        <TextView
            android:id="@+id/btn_indent_operation"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="@string/cancel_indent"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/btn_request_sendBack"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:visibility="gone"
            android:text="@string/request_sendback"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/btn_contact_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="@string/contact_customer_cervice"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_small" />

        <Button
            android:id="@+id/btn_pay_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_confrimorder_select"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/pay_now"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/title_layout"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:divider="@color/transparent"
            android:dividerHeight="10dip" >
        </ListView>
    </LinearLayout>

</RelativeLayout>