<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/popup"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/baidu_store_img"
            android:layout_marginLeft="1dp"
            android:src="@drawable/homepage_bracelet_01"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="123"
            android:id="@+id/store_name"
            android:textSize="13sp"
            android:textColor="#101010"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/baidu_store_img"
            android:layout_toEndOf="@+id/baidu_store_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="132000000"
            android:id="@+id/store_tel"
            android:textSize="11sp"
            android:textColor="#101010"
            android:layout_marginBottom="2dp"
            android:layout_below="@+id/store_name"
            android:layout_alignLeft="@+id/store_name"
            android:layout_alignStart="@+id/store_name"
            />

    </RelativeLayout>
</LinearLayout>