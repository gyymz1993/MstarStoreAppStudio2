<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/id_lay_title"
        layout="@layout/title_layout" />

    <RelativeLayout
        style="@style/layout_vertical"
        android:layout_below="@+id/id_lay_title"
        android:layout_weight="4">

        <WebView
            android:id="@+id/profile_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip" />

        <include
            layout="@layout/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            layout="@layout/no_result_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            layout="@layout/network_error_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            style="@style/layout_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="分享"
                android:textColor="#999" />
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv"
                android:background="#999" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv"
                android:background="#999" />
        </RelativeLayout>

        <LinearLayout
            style="@style/layout_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/id_lay_sharweixin"
                style="@style/layout_horizontal"
                android:layout_marginLeft="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_img_weixin"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:text="微信好友" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_lay_sharweixinfriend"
                style="@style/layout_horizontal"
                android:layout_marginRight="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_img_weixin_friend"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_weixin_friend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dip"
                    android:text="微信朋友圈" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>