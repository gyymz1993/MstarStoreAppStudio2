<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/home_title_background"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <!--
        <ImageView
            android:id="@+id/img_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/homepage_record"
            android:contentDescription="@string/app_name"/>
    -->

    <TextView
        android:id="@+id/index_search_button"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:paddingLeft="14dp"
        android:layout_weight="1"
        android:background="@drawable/home_nav_searchbox"
        android:drawableLeft="@drawable/home_nav_searchbox_icon"
        android:gravity="center|left"
        android:text="@string/index_search_edit_hint"
        android:textColor="@color/gray"
        android:textSize="14sp" />


    <ImageButton
        android:id="@+id/index_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_nav_icon_location"
        android:contentDescription="@string/app_name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"/>

    <ImageButton
        android:id="@+id/index_camer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_richscan"
        android:contentDescription="@string/app_name"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

</LinearLayout>