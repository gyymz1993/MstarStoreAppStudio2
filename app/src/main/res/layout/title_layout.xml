<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/the_title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/title_background"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:paddingLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/titleback_bg"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:visibility="visible" />


    <EditText
        android:id="@+id/shop_search_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="1"
        android:background="@drawable/home_nav_searchbox"
        android:drawableLeft="@drawable/home_nav_searchbox_icon"
        android:gravity="center"
        android:hint="@string/index_search_edit_hint"
        android:paddingLeft="14dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/shop_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/search_btn_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="搜本店"
        android:textColor="@color/color_black_st"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/title_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/icon_mail"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/change_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:button="@drawable/classify_layout_selector"
        android:text="@null"
        android:visibility="gone" />

    <cn.mstar.store.customviews.SquareTextView
        android:id="@+id/tv_filter"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="@string/filtrate"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_detach_line" />
</RelativeLayout>
