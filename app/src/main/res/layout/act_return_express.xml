<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/title_layout">
    </include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dip"
        android:fitsSystemWindows="true"
        >
    <RelativeLayout

        android:background="@color/white"
        android:id="@+id/id_rl_slect_express"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_margin="10dip"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/id_tv_one"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/red"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_toRightOf="@+id/id_tv_one"
            android:id="@+id/id_tv_two"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:text="物流公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_toRightOf="@+id/id_tv_two"
            android:id="@+id/id_tv_three"
            android:gravity="center"
            android:layout_marginLeft="30dip"
            android:text="请选择物流公司"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_toRightOf="@+id/id_tv_three"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/btn_expand_pressed"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/iv_btn_expand_pressed"
            android:layout_width="wrap_content"
            android:src="@drawable/btn_expand_pressed"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/id_tv_one1"
            android:gravity="center_vertical"
            android:text="*"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_toRightOf="@+id/id_tv_one1"
            android:id="@+id/id_tv_two1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="运单编号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_toRightOf="@+id/id_tv_two1"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/id_et_code"
                android:layout_marginLeft="30dip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="number"
                android:background="@null"
                android:textSize="12dp"
                android:hint="请输入单号"
                />
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/id_bt_confim"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="确 定"
            android:background="@color/color_gold_down"
            />

    </RelativeLayout>
</RelativeLayout>