<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wcl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cn.mstar.store.customviews.RoundedImageView
            android:id="@+id/comment_list_img"
            wcl:corner_radius="6dp"
            wcl:border_color2="@color/transparent"
            wcl:border_width2="0dp"
            android:scaleType="centerCrop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/my_bg" />

        <TextView android:id="@+id/comment_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="巴厘岛没有风" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1" />

        <TextView android:id="@+id/comment_list_commenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_grey_st"
            android:textSize="12sp"
            android:text="2015-07-20 10:20:36" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView android:id="@+id/comment_list_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="非常满意，包装很漂亮，款式简单时尚，快递也很速度，介绍个朋友啦，下次还来。" />

        <cn.mstar.store.customviews.CustomGridView
            android:id="@+id/comment_list_comimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"
            android:numColumns="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格：" />

            <TextView android:id="@+id/comment_list_gg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1f70 平安" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="型号：" />

            <TextView android:id="@+id/comment_list_xh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10g" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买日期：" />

            <TextView android:id="@+id/comment_list_buytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-07-18 18:14:28" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>