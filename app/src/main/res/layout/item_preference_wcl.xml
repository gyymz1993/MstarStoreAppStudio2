<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/preference_wcl_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/picture1_" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preference_wcl_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="范儿珠宝定制正品 白18k金砖石戒指转角遇到爱" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:text="商城价：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuan_char"
                android:textSize="12sp"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/preference_wcl_price_fr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="34999.00"
                android:textColor="@color/red" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="市场价：" />


            <cn.mstar.store.customviews.TextViewWithLine
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuan_char"
                android:textSize="12sp"
                android:textColor="@color/color_light_grey" />

            <cn.mstar.store.customviews.TextViewWithLine
                android:id="@+id/preference_wcl_price_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/preference_wcl_char"
                android:textSize="12sp"
                android:text="34999.00"
                android:textColor="@color/color_light_grey" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>